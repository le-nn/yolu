{
    "$schema"   : "https://json.schemastore.org/docfx.json",
    "metadata": [
        {
            "src": [
                {
                    "src": "./src",
                    "files": [
                        "**/*.csproj"
                    ]
                }
            ],
            "dest": "api"
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "**/*.{md,yml}"
                ],
                "exclude": [
                    "**/_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**",
                    "index.html"
                ]
            }
        ],
        "output": "./artifacts/_site",
        "template": [
            "default",
            "templates"
        ],
        "sitemap": {
            "baseUrl": "https://le-nn.github.io/yolu/",
            "priority": 0.1,
            "changefreq": "monthly"
        },
        "globalMetadata": {
            "_appName": "Yolu",
            "_appTitle": "Yolu",
            "_appFaviconPath": "images/logo.png",
            "_appLogoPath": "images/logo.png",
            "_appLogoUrl": "https://le-nn.github.io/yolu",
            "_appFooter": "Copyright Â© 2024 le-nn",
            "_enableSearch": true,
            "pdf": false
        }
    }
}
